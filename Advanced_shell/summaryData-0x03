#!/bin/bash

# Directory containing PokÃ©mon JSON files
DATA_DIR="pokemon_data"
OUTPUT_FILE="pokemon_report.csv"

# Ensure data directory exists
if [ ! -d "$DATA_DIR" ]; then
    echo "Error: $DATA_DIR does not exist. Run batchProcessing-0x02 first."
    exit 1
fi

# Write CSV header
echo "Name,Height (m),Weight (kg)" > "$OUTPUT_FILE"

# Extract data from each JSON file
for file in "$DATA_DIR"/*.json; do
    if [ -f "$file" ]; then
        name=$(jq -r '.name' "$file" | awk '{print toupper(substr($0,1,1)) tolower(substr($0,2))}')
        height=$(jq '.height' "$file")
        weight=$(jq '.weight' "$file")

        # Convert to meters and kilograms
        height_m=$(awk "BEGIN {printf \"%.1f\", $height/10}")
        weight_kg=$(awk "BEGIN {printf \"%.1f\", $weight/10}")

        echo "$name,$height_m,$weight_kg" >> "$OUTPUT_FILE"
    fi
done

# Print report
echo "CSV Report generated at: $OUTPUT_FILE"
cat "$OUTPUT_FILE"
echo

# Calculate averages using awk
awk -F',' 'NR>1 {sum_h+=$2; sum_w+=$3; count++}
END {
    if (count > 0) {
        printf "\nAverage Height: %.2f m\n", sum_h/count
        printf "Average Weight: %.2f kg\n", sum_w/count
    }
}' "$OUTPUT_FILE"
